# Baileys Bridge Configuration
BRIDGE_URL=http://localhost:3000

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=glm-4.7-flash:latest
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=dummy
# Hide reasoning/thinking output from LLM responses (useful for o1 models and verbose models)
LLM_HIDE_REASONING=true

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Session Management
# Time gap (in seconds) after which conversation history is cleared
# Default: 3600 (1 hour). For web UI, history is always cleared on page refresh.
SESSION_TIMEOUT_SECONDS=3600

# Paths
CONFIG_DIR=./config
DATA_DIR=./data
WHATSAPP_AUTH_DIR=./data/whatsapp-auth
